- if @restaurants.all.any?
  - @restaurants.each do |restaurant|
    %li= link_to restaurant.name, restaurant_path(restaurant)
    %li= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
    %li= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
    %li= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)

- else
  %h1 No restaurants yet!

=link_to 'Add a restaurant', new_restaurant_path
